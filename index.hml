<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VertexScripts - Script Uploader & Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #0c2461 0%, #1e3799 100%);
            color: #fff;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 0;
            margin-bottom: 30px;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        }
        
        .logo {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .logo i {
            font-size: 2.5rem;
            color: #4bcffa;
        }
        
        .logo h1 {
            font-size: 2.2rem;
            background: linear-gradient(to right, #4bcffa, #5d79ff);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            letter-spacing: 1px;
        }
        
        .credit {
            font-size: 0.9rem;
            opacity: 0.8;
            background: rgba(0, 0, 0, 0.2);
            padding: 8px 15px;
            border-radius: 20px;
        }
        
        .main-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 40px;
        }
        
        @media (max-width: 900px) {
            .main-content {
                grid-template-columns: 1fr;
            }
        }
        
        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .card h2 {
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .card h2 i {
            color: #4bcffa;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #ddd;
        }
        
        input, textarea {
            width: 100%;
            padding: 12px 15px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            color: white;
            font-size: 1rem;
        }
        
        input:focus, textarea:focus {
            outline: none;
            border-color: #4bcffa;
        }
        
        textarea {
            min-height: 100px;
            resize: vertical;
        }
        
        .step-container {
            background: rgba(0, 0, 0, 0.2);
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 15px;
        }
        
        .step-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }
        
        .step-title {
            font-weight: 600;
            color: #4bcffa;
        }
        
        .remove-step {
            background: #ff6b6b;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 4px 10px;
            cursor: pointer;
        }
        
        .btn {
            background: linear-gradient(to right, #4bcffa, #5d79ff);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(75, 207, 250, 0.3);
        }
        
        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
        }
        
        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.2);
        }
        
        .scripts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .script-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .script-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.08);
        }
        
        .script-thumbnail {
            height: 160px;
            width: 100%;
            object-fit: cover;
            background: linear-gradient(45deg, #0c2461, #1e3799);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #4bcffa;
            font-size: 3rem;
        }
        
        .script-info {
            padding: 15px;
        }
        
        .script-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 8px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .script-meta {
            font-size: 0.9rem;
            opacity: 0.8;
            margin-bottom: 15px;
        }
        
        .steps-indicator {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-bottom: 15px;
        }
        
        .step-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
        }
        
        .step-dot.active {
            background: #4bcffa;
        }
        
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        
        .modal-content {
            background: #1a1a2e;
            border-radius: 15px;
            width: 90%;
            max-width: 500px;
            padding: 30px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
            text-align: center;
        }
        
        .modal h3 {
            margin-bottom: 20px;
            font-size: 1.8rem;
            color: #4bcffa;
        }
        
        .timer {
            font-size: 3rem;
            font-weight: bold;
            margin: 25px 0;
            color: #4bcffa;
        }
        
        .progress-bar {
            height: 8px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
            margin: 20px 0;
            overflow: hidden;
        }
        
        .progress {
            height: 100%;
            background: linear-gradient(to right, #4bcffa, #5d79ff);
            width: 0%;
            transition: width 1s linear;
        }
        
        .step-check {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 20px 0;
        }
        
        .check-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 3px solid rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }
        
        .check-circle i {
            color: #4bcffa;
            font-size: 1.5rem;
            opacity: 0;
        }
        
        .step-text {
            text-align: left;
        }
        
        .step-name {
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .step-desc {
            font-size: 0.9rem;
            opacity: 0.8;
        }
        
        .unlock-btn {
            background: #00b894;
            margin-top: 20px;
        }
        
        .unlock-btn:disabled {
            background: #555;
            cursor: not-allowed;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px 20px;
            opacity: 0.7;
        }
        
        .empty-state i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #4bcffa;
        }
        
        footer {
            text-align: center;
            padding: 20px;
            margin-top: 30px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            font-size: 0.9rem;
            opacity: 0.7;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo">
                <i class="fas fa-code"></i>
                <h1>VertexScripts</h1>
            </div>
            <div class="credit">Created by VertexScripts</div>
        </header>
        
        <main class="main-content">
            <!-- Upload Script Section -->
            <section class="card">
                <h2><i class="fas fa-upload"></i> Upload New Script</h2>
                <form id="uploadForm">
                    <div class="form-group">
                        <label for="scriptName">Script Name</label>
                        <input type="text" id="scriptName" placeholder="Enter script name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="thumbnail">Thumbnail URL</label>
                        <input type="text" id="thumbnail" placeholder="https://example.com/thumbnail.jpg" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="videoLink">Video URL (Optional)</label>
                        <input type="text" id="videoLink" placeholder="https://youtube.com/watch?v=...">
                    </div>
                    
                    <div class="form-group">
                        <label for="scriptLink">Script Download Link</label>
                        <input type="text" id="scriptLink" placeholder="https://example.com/script.zip" required>
                    </div>
                    
                    <div class="form-group">
                        <label>Unlock Steps (Redirect links before unlocking)</label>
                        <div id="stepsContainer">
                            <!-- Default VertexR_S subscription step -->
                            <div class="step-container" data-step="1">
                                <div class="step-header">
                                    <div class="step-title">Step 1: Subscribe to VertexR_S</div>
                                </div>
                                <input type="text" class="step-url" placeholder="https://m.youtube.com/@VertexR_S" value="https://m.youtube.com/@VertexR_S" readonly>
                            </div>
                        </div>
                        
                        <button type="button" id="addStepBtn" class="btn btn-secondary">
                            <i class="fas fa-plus"></i> Add Another Step
                        </button>
                    </div>
                    
                    <button type="submit" class="btn">
                        <i class="fas fa-cloud-upload-alt"></i> Upload Script
                    </button>
                </form>
            </section>
            
            <!-- Dashboard Section -->
            <section class="card">
                <h2><i class="fas fa-tachometer-alt"></i> Dashboard</h2>
                <p>View and manage all uploaded scripts</p>
                
                <div id="scriptsList" class="scripts-grid">
                    <!-- Scripts will be dynamically added here -->
                    <div class="empty-state">
                        <i class="fas fa-code"></i>
                        <p>No scripts uploaded yet. Upload your first script!</p>
                    </div>
                </div>
            </section>
        </main>
        
        <!-- Unlock Modal -->
        <div id="unlockModal" class="modal">
            <div class="modal-content">
                <h3>Unlock Script</h3>
                <p>Complete the following steps to unlock the script</p>
                
                <div id="stepChecks">
                    <!-- Step checks will be dynamically added here -->
                </div>
                
                <div class="progress-bar">
                    <div id="progress" class="progress"></div>
                </div>
                
                <div class="timer" id="timer">20</div>
                
                <button id="accessLinkBtn" class="btn unlock-btn" disabled>
                    <i class="fas fa-lock"></i> Unlocking... Please wait
                </button>
                
                <button id="cancelBtn" class="btn btn-secondary" style="margin-top: 10px;">
                    <i class="fas fa-times"></i> Cancel
                </button>
            </div>
        </div>
        
        <footer>
            <p>VertexScripts Dashboard &copy; 2023 | All scripts are property of their respective owners</p>
        </footer>
    </div>

    <script>
        // Sample data for initial scripts
        let scripts = [
            {
                id: 1,
                name: "Roblox Auto Farmer",
                thumbnail: "https://images.unsplash.com/photo-1542751371-adc38448a05e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80",
                videoLink: "https://youtube.com/watch?v=abc123",
                scriptLink: "https://vertexscripts.com/download/roblox-autofarmer",
                steps: [
                    { url: "https://m.youtube.com/@VertexR_S", name: "Subscribe to VertexR_S" },
                    { url: "https://roblox.com", name: "Visit Roblox" },
                    { url: "https://example.com/step3", name: "Complete Survey" }
                ],
                uploadDate: "2023-10-15"
            },
            {
                id: 2,
                name: "Game Cheat Engine",
                thumbnail: "https://images.unsplash.com/photo-1511512578047-dfb367046420?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80",
                videoLink: "",
                scriptLink: "https://vertexscripts.com/download/game-cheat-engine",
                steps: [
                    { url: "https://m.youtube.com/@VertexR_S", name: "Subscribe to VertexR_S" },
                    { url: "https://example.com/link2", name: "Join Discord" }
                ],
                uploadDate: "2023-10-10"
            }
        ];

        let nextId = 3;
        let currentUnlockScript = null;
        let currentStep = 0;
        let countdown = 20;
        let countdownInterval = null;

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            renderScripts();
            
            // Form submission
            document.getElementById('uploadForm').addEventListener('submit', function(e) {
                e.preventDefault();
                uploadScript();
            });
            
            // Add step button
            document.getElementById('addStepBtn').addEventListener('click', function() {
                addStep();
            });
            
            // Cancel unlock button
            document.getElementById('cancelBtn').addEventListener('click', function() {
                closeUnlockModal();
            });
            
            // Access link button
            document.getElementById('accessLinkBtn').addEventListener('click', function() {
                if (!this.disabled) {
                    window.open(currentUnlockScript.scriptLink, '_blank');
                    closeUnlockModal();
                }
            });
        });

        // Render all scripts in the dashboard
        function renderScripts() {
            const scriptsList = document.getElementById('scriptsList');
            
            if (scripts.length === 0) {
                scriptsList.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-code"></i>
                        <p>No scripts uploaded yet. Upload your first script!</p>
                    </div>
                `;
                return;
            }
            
            scriptsList.innerHTML = '';
            
            scripts.forEach(script => {
                const scriptCard = document.createElement('div');
                scriptCard.className = 'script-card';
                scriptCard.innerHTML = `
                    <div class="script-thumbnail">
                        <i class="fas fa-code"></i>
                    </div>
                    <div class="script-info">
                        <div class="script-title">${script.name}</div>
                        <div class="script-meta">Uploaded: ${script.uploadDate}</div>
                        <div class="steps-indicator">
                            ${script.steps.map((step, index) => 
                                `<div class="step-dot ${index === 0 ? 'active' : ''}"></div>`
                            ).join('')}
                        </div>
                        <button class="btn unlock-script-btn" data-id="${script.id}">
                            <i class="fas fa-unlock-alt"></i> Unlock Script
                        </button>
                    </div>
                `;
                
                // Set thumbnail if available
                const thumbnailDiv = scriptCard.querySelector('.script-thumbnail');
                if (script.thumbnail) {
                    thumbnailDiv.innerHTML = '';
                    thumbnailDiv.style.backgroundImage = `url('${script.thumbnail}')`;
                    thumbnailDiv.style.backgroundSize = 'cover';
                    thumbnailDiv.style.backgroundPosition = 'center';
                }
                
                scriptsList.appendChild(scriptCard);
            });
            
            // Add event listeners to unlock buttons
            document.querySelectorAll('.unlock-script-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const scriptId = parseInt(this.getAttribute('data-id'));
                    const script = scripts.find(s => s.id === scriptId);
                    if (script) {
                        startUnlockProcess(script);
                    }
                });
            });
        }

        // Upload a new script
        function uploadScript() {
            const scriptName = document.getElementById('scriptName').value;
            const thumbnail = document.getElementById('thumbnail').value;
            const videoLink = document.getElementById('videoLink').value;
            const scriptLink = document.getElementById('scriptLink').value;
            
            // Get all steps
            const stepContainers = document.querySelectorAll('.step-container');
            const steps = [];
            
            stepContainers.forEach(container => {
                const urlInput = container.querySelector('.step-url');
                const titleElement = container.querySelector('.step-title');
                const stepName = titleElement ? titleElement.textContent.replace('Step X: ', '') : `Step ${steps.length + 1}`;
                
                if (urlInput.value) {
                    steps.push({
                        url: urlInput.value,
                        name: stepName
                    });
                }
            });
            
            // Create new script object
            const newScript = {
                id: nextId++,
                name: scriptName,
                thumbnail: thumbnail,
                videoLink: videoLink,
                scriptLink: scriptLink,
                steps: steps,
                uploadDate: new Date().toISOString().split('T')[0]
            };
            
            // Add to scripts array
            scripts.push(newScript);
            
            // Reset form
            document.getElementById('uploadForm').reset();
            
            // Reset steps to default (only VertexR_S step)
            const stepsContainer = document.getElementById('stepsContainer');
            stepsContainer.innerHTML = `
                <div class="step-container" data-step="1">
                    <div class="step-header">
                        <div class="step-title">Step 1: Subscribe to VertexR_S</div>
                    </div>
                    <input type="text" class="step-url" placeholder="https://m.youtube.com/@VertexR_S" value="https://m.youtube.com/@VertexR_S" readonly>
                </div>
            `;
            
            // Render updated scripts
            renderScripts();
            
            // Show success message
            alert(`Script "${scriptName}" uploaded successfully!`);
        }

        // Add a new step to the upload form
        function addStep() {
            const stepsContainer = document.getElementById('stepsContainer');
            const stepCount = stepsContainer.children.length + 1;
            
            const stepContainer = document.createElement('div');
            stepContainer.className = 'step-container';
            stepContainer.setAttribute('data-step', stepCount);
            stepContainer.innerHTML = `
                <div class="step-header">
                    <div class="step-title">Step ${stepCount}: <input type="text" class="step-name-input" placeholder="Step name (e.g., Visit Website)" style="background: transparent; border: none; color: white; width: 200px;"></div>
                    <button type="button" class="remove-step"><i class="fas fa-times"></i></button>
                </div>
                <input type="text" class="step-url" placeholder="https://example.com" required>
            `;
            
            stepsContainer.appendChild(stepContainer);
            
            // Add event listener to remove button
            stepContainer.querySelector('.remove-step').addEventListener('click', function() {
                stepContainer.remove();
                updateStepNumbers();
            });
            
            // Add event listener to step name input
            const nameInput = stepContainer.querySelector('.step-name-input');
            nameInput.addEventListener('input', function() {
                const titleElement = stepContainer.querySelector('.step-title');
                titleElement.innerHTML = `Step ${stepCount}: ${this.value || 'Unnamed Step'}`;
            });
        }

        // Update step numbers after removal
        function updateStepNumbers() {
            const stepsContainer = document.getElementById('stepsContainer');
            const stepContainers = stepsContainer.querySelectorAll('.step-container');
            
            stepContainers.forEach((container, index) => {
                const stepNumber = index + 1;
                container.setAttribute('data-step', stepNumber);
                
                const titleElement = container.querySelector('.step-title');
                const currentText = titleElement.textContent;
                const newText = currentText.replace(/Step \d+: /, `Step ${stepNumber}: `);
                titleElement.textContent = newText;
            });
        }

        // Start the unlock process for a script
        function startUnlockProcess(script) {
            currentUnlockScript = script;
            currentStep = 0;
            countdown = 20;
            
            // Show modal
            const modal = document.getElementById('unlockModal');
            modal.style.display = 'flex';
            
            // Initialize step checks
            const stepChecks = document.getElementById('stepChecks');
            stepChecks.innerHTML = '';
            
            script.steps.forEach((step, index) => {
                const stepCheck = document.createElement('div');
                stepCheck.className = 'step-check';
                stepCheck.innerHTML = `
                    <div class="check-circle" id="checkCircle${index}">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="step-text">
                        <div class="step-name">${step.name}</div>
                        <div class="step-desc">${step.url}</div>
                    </div>
                `;
                stepChecks.appendChild(stepCheck);
            });
            
            // Reset timer and progress
            document.getElementById('timer').textContent = countdown;
            document.getElementById('progress').style.width = '0%';
            document.getElementById('accessLinkBtn').disabled = true;
            document.getElementById('accessLinkBtn').innerHTML = '<i class="fas fa-lock"></i> Unlocking... Please wait';
            
            // Start the unlock process
            processNextStep();
        }

        // Process the next step in the unlock process
        function processNextStep() {
            if (currentStep >= currentUnlockScript.steps.length) {
                // All steps processed, start countdown
                startCountdown();
                return;
            }
            
            const step = currentUnlockScript.steps[currentStep];
            
            // Open the step URL in a new tab
            window.open(step.url, '_blank');
            
            // Show checking animation
            const checkCircle = document.getElementById(`checkCircle${currentStep}`);
            checkCircle.style.borderColor = '#4bcffa';
            
            // Simulate checking for 3 seconds
            setTimeout(() => {
                // Show checkmark
                const checkIcon = checkCircle.querySelector('i');
                checkIcon.style.opacity = '1';
                
                // Move to next step
                currentStep++;
                processNextStep();
            }, 3000);
        }

        // Start the final countdown
        function startCountdown() {
            // Update progress bar
            document.getElementById('progress').style.width = '100%';
            
            // Start countdown
            countdownInterval = setInterval(() => {
                countdown--;
                document.getElementById('timer').textContent = countdown;
                
                if (countdown <= 0) {
                    clearInterval(countdownInterval);
                    
                    // Enable the unlock button
                    const accessBtn = document.getElementById('accessLinkBtn');
                    accessBtn.disabled = false;
                    accessBtn.innerHTML = '<i class="fas fa-unlock-alt"></i> Access Script Download';
                }
            }, 1000);
        }

        // Close the unlock modal
        function closeUnlockModal() {
            clearInterval(countdownInterval);
            document.getElementById('unlockModal').style.display = 'none';
            currentUnlockScript = null;
        }
    </script>
</body>
</html>
